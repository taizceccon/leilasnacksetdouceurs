{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block body %}
    <section class="banner-contact bg-pink-100 py-12 text-center rounded-md mb-10">
        <h1 class="text-4xl font-cursive text-pink-700 mb-4">Contactez-nous</h1>
        <p class="text-pink-800 max-w-2xl mx-auto text-lg">
            Une question, une commande sp√©ciale, ou juste envie de papoter douceurs ?<br>
            Nous sommes l√† pour vous r√©pondre avec gourmandise et sourire !
        </p>
        <img src="{{ asset('images/contact-banner.png') }}" alt="Contact Douceurs" class="mx-auto mt-6 w-40">
    </section>

    <div class="contact-form max-w-lg mx-auto bg-white p-8 rounded shadow">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mb-6 rounded bg-green-100 p-4 text-green-700 font-semibold">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}
            <div class="form-group mb-4">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'font-semibold'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'border border-pink-300 rounded w-full p-2'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group mb-4">
                {{ form_label(form.email, null, {'label_attr': {'class': 'font-semibold'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'border border-pink-300 rounded w-full p-2'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group mb-4">
                {{ form_label(form.sujet, null, {'label_attr': {'class': 'font-semibold'}}) }}
                {{ form_widget(form.sujet, {'attr': {'class': 'border border-pink-300 rounded w-full p-2'}}) }}
                {{ form_errors(form.sujet) }}
            </div>

            <div class="form-group mb-6">
                {{ form_label(form.message, null, {'label_attr': {'class': 'font-semibold'}}) }}
                {{ form_widget(form.message, {'attr': {'class': 'border border-pink-300 rounded w-full p-4', 'rows': 6}}) }}
                {{ form_errors(form.message) }}
            </div>

            <div class="form-group text-center">
                {{ form_widget(form.envoyer, {'label': 'üç∞ Envoyer mon message gourmand', 'attr': {'class': 'bg-pink-600 hover:bg-pink-700 text-white px-6 py-2 rounded cursor-pointer'}}) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}