{# templates/client/register.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block title %}Inscription Client{% endblock %}

{% block body %}
<section class="banner-contact bg-pink-100 py-12 text-center rounded-md mb-10" role="region" aria-labelledby="register-heading">
    <h1 id="register-heading" class="text-4xl font-cursive text-pink-700 mb-4">Inscription Client</h1>
    <p class="text-pink-800 max-w-2xl mx-auto text-lg">
        Rejoignez notre univers sucrÃ© et profitez d'une expÃ©rience gourmande sur mesure ðŸ’–
    </p>
</section>

<div class="contact-form max-w-lg mx-auto bg-white p-8 rounded shadow">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mb-6 rounded bg-green-100 p-4 text-green-700 font-semibold" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(registrationForm, {attr: {'aria-labelledby': 'register-heading'}}) }}

        {% for field in [
            registrationForm.email,
            registrationForm.nom,
            registrationForm.telephone,
            registrationForm.ville,
            registrationForm.adress,
            registrationForm.password
        ] %}
            <div class="form-group mb-4">
                {{ form_label(field, null, {'label_attr': {'class': 'font-semibold'}}) }}
                {{ form_widget(field, {
                    'attr': {
                        'class': 'border border-pink-300 rounded w-full p-2',
                        'aria-required': 'true',
                        'aria-invalid': field.vars.errors|length > 0 ? 'true' : 'false'
                    }
                }) }}
                {{ form_errors(field) }}
            </div>
        {% endfor %}

        <div class="form-group text-center">
            <button type="submit" class="bg-pink-600 hover:bg-pink-700 text-white px-6 py-2 rounded cursor-pointer" aria-label="Envoyer le formulaire d'inscription">
                M'inscrire avec gourmandise
            </button>
        </div>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}