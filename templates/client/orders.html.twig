{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<section class="max-w-3xl mx-auto mt-12 p-6 bg-white rounded shadow">
    <h1 class="text-3xl font-semibold mb-6">Mes commandes</h1>

    {% if orders is empty %}
        <p>Vous n'avez aucune commande pour le moment.</p>
    {% else %}
        <ul class="space-y-4">
            {% for order in orders %}
                <li class="border p-4 rounded">
                    <strong>Commande #{{ order.id }}</strong> - {{ order.date|date('d/m/Y') }} - Statut : {{ order.status }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</section>
{% endblock %}