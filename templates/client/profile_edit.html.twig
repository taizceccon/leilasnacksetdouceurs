{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<section class="max-w-md mx-auto mt-12 p-6 bg-white rounded shadow">
    <h1 class="text-3xl font-semibold mb-6">Modifier mon profil</h1>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(profileForm) }}
        {{ form_widget(profileForm, {'attr': {'class': 'space-y-4'}}) }}

        <button type="submit" class="bg-pink-600 hover:bg-pink-700 text-white px-6 py-2 rounded">
            Enregistrer
        </button>
    {{ form_end(profileForm) }}
</section>
{% endblock %}