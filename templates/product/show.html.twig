{% extends 'base.html.twig' %}

{% block title %}{{ product.titre }} - Douceurs & Snacks{% endblock %}

{% block body %}
<section class="container mx-auto py-10">
    <div class="bg-white p-6 rounded shadow text-center">
        <img src="/images/{{ product.image }}" alt="{{ product.titre }}" class="w-60 mx-auto mb-4 rounded">
        <h1 class="text-2xl font-bold mb-2">{{ product.titre }}</h1>
        <p class="mb-4">{{ product.description }}</p>
        <p class="text-green-600 font-semibold">{{ (product.prix / 100)|number_format(2, ',', ' ') }} € / unité</p>
        {% if product.image %}
            <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.titre }}" style="max-width: 300px;">
        {% endif %}
        {% if product.urlvideo %}
            <iframe width="320" height="180" class="mx-auto mt-4" src="{{ product.urlvideo }}" frameborder="0" allowfullscreen></iframe>
        {% endif %}
        <a href="{{ path('app_home') }}" class="text-pink-600 underline mt-4 block">← Retour à la boutique</a>
    </div>
</section>
{% endblock %}