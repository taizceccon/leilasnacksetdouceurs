{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="bg-pink-100 py-12 text-center rounded-md mb-10 shadow">
    <h1 class="text-4xl font-cursive text-pink-700 mb-4">Connexion</h1>
    <p class="text-pink-800 max-w-2xl mx-auto text-lg">
        Connectez-vous pour acc√©der √† toutes vos douceurs personnalis√©es üç∞<br>
        Heureux de vous revoir !
    </p>
</section>

<div class="max-w-md mx-auto bg-white p-8 rounded shadow-md">
    {% if error %}
        <div class="bg-red-100 text-red-700 p-4 mb-6 rounded">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {% if app.user %}
        <div class="mb-4 text-center text-green-700 font-semibold">
            Vous √™tes connect√© en tant que {{ app.user.userIdentifier }}. 
            <a href="{{ path('app_logout') }}" class="text-blue-600 hover:underline">D√©connexion</a>
        </div>
    {% endif %}

    <h2 class="text-2xl font-bold text-center text-pink-700 mb-6">Se connecter</h2>

    <form method="post">
        <div class="mb-4">
            <label for="inputEmail" class="block font-semibold mb-1">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                class="w-full border border-pink-300 rounded p-2" autocomplete="email" required autofocus>
        </div>

        <div class="mb-4">
            <label for="inputPassword" class="block font-semibold mb-1">Mot de passe</label>
            <input type="password" name="password" id="inputPassword"
                class="w-full border border-pink-300 rounded p-2" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="mb-4 flex items-center">
            <input type="checkbox" name="_remember_me" id="remember_me" class="mr-2">
            <label for="remember_me" class="text-sm">Se souvenir de moi</label>
        </div>

        <div class="mb-6 text-center">
            <button class="bg-pink-600 hover:bg-pink-700 text-white px-6 py-2 rounded" type="submit">
                Connexion
            </button>
        </div>

        <p class="text-center text-sm">
            Pas encore de compte ?
            <a href="/client/register" class="text-blue-600 hover:underline">Cr√©er un compte</a>
        </p>
    </form>
</div>
{% endblock %}