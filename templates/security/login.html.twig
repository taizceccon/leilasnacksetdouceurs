{% extends 'base.html.twig' %}

{% block title %}Connexion - Leila Snacks{% endblock %}

{% block body %}
   <div class="flex items-center justify-center bg-cr√®me min-h-[50vh] py-6 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-xl border border-jaunePale space-y-6">

        <!-- Logo ou Illustration -->
        <div class="flex justify-center">
            <img src="/images/logo.png" alt="Logo Leila" class="h-24 w-auto">
        </div>

        <div class="text-center">
            <h2 class="text-2xl font-bold text-roseFonce">Bienvenue chez Leila üå∏</h2>
            <p class="mt-1 text-sm text-vertSauge">Connectez-vous pour savourer nos douceurs.</p>
        </div>

        {% if error %}
            <div class="bg-red-100 text-red-700 px-4 py-2 rounded text-sm">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="bg-green-100 text-green-800 px-4 py-2 rounded text-sm">
                Connect√© en tant que {{ app.user.userIdentifier }}.
                <a href="{{ path('app_logout') }}" class="underline hover:text-roseFonce">Se d√©connecter</a>
            </div>
        {% endif %}

        <form method="post" class="space-y-4">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700">Adresse e-mail</label>
                <input type="email" name="email" id="username" value="{{ last_username }}" required autofocus
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm text-gray-700 focus:outline-none focus:ring-bleuMenthe focus:border-bleuMenthe">
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                <input type="password" name="_password" id="password" required
                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm text-gray-700 focus:outline-none focus:ring-bleuMenthe focus:border-bleuMenthe">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex items-center justify-between">
                <label for="_remember_me" class="flex items-center text-sm text-gray-700">
                   <input type="checkbox" name="_remember_me" id="_remember_me" class="mr-2"> Se souvenir de moi</label>
                <a href="#" class="text-sm text-roseFonce hover:text-bleuMenthe">Mot de passe oubli√© ?</a>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-vertSauge hover:bg-bleuMenthe focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-roseFonce transition">
                    Se connecter
                </button>
            </div>
        </form>

        <p class="mt-4 text-center text-sm text-gray-600">
            Pas encore de compte ?
            <a href="{{ path('app_register') }}" class="text-roseFonce hover:text-bleuMenthe font-medium">Cr√©er un compte</a>
        </p>
    </div>
</div>
{% endblock %}