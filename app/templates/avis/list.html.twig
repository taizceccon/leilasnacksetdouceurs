{% extends 'base.html.twig' %}

{% block title %}Avis clients - Douceurs & Snacks de Leila{% endblock %}

{% block meta %}
  <meta name="description" content="Avis">
{% endblock %}
{% block body %}

<section class="banner-contact bg-rose-150 py-12 text-center rounded-md mb-10 shadow">
    <h1 class="text-4xl mb-2" style="font-family: 'Buffalo', cursive;">Avis des gourmands</h1>
    <p class="text-rose-800 text-lg">Merci pour vos retours – ils sont aussi doux que nos créations !</p>

    <a href="{{ path('app_add_avis') }}" class="inline-block mt-4 bg-rose-600 hover:bg-rose-700 text-white font-semibold py-2 px-4 rounded transition duration-300">
        Laisser ton avis !
    </a>
</section>

<section class="container mx-auto max-w-4xl px-4">
    {% if avis is empty %}
        <p class="text-center text-gray-600 text-lg">Aucun avis disponible pour le moment.</p>
    {% else %}
        <div class="space-y-6">
            {% for avis in avis %}
                <div class="bg-white rounded-lg shadow-md p-6">
                    <div class="flex items-center justify-between mb-2">
                        <h3 class="text-rose-700 font-bold text-lg">{{ avis.nom }}</h3>
                        <span class="text-sm text-gray-500">{{ avis.createdAt|date('d/m/Y H:i') }}</span>
                    </div>
                    <p class="text-gray-800 mb-2 italic">"{{ avis.message }}"</p>
                    <p class="text-sm text-gray-500">Envoyé par : {{ avis.email }}</p>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</section>

{% endblock %}