{% extends 'base.html.twig' %}

{% block title %}Donnez votre avis - Douceurs & Snacks de Leila{% endblock %}

{% block meta %}
  <meta name="description" content="{{ "laisser ton avis" }}">
{% endblock %}
{% block body %}

<section class="banner-contact bg-rose-150 py-12 text-center rounded-md mb-10 shadow">
    <h1 class="text-4xl mb-2" style="font-family: 'Buffalo', cursive;">Donnez votre avis</h1>
    <p class="text-rose-800 text-lg">Votre avis compte pour nous – partagez vos impressions sucrées et salées !</p>
</section>

<section class="max-w-xl mx-auto bg-white dark:bg-[#1b1b1b] dark:text-[#f3f3f3] shadow-lg rounded-lg p-8">
    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="mb-4">
            {{ form_label(form.nom, null, {'label_attr': {'class': 'block font-semibold mb-1'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'w-full border rounded px-3 py-2'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.email, null, {'label_attr': {'class': 'block font-semibold mb-1'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'w-full border rounded px-3 py-2'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.message, null, {'label_attr': {'class': 'block font-semibold mb-1'}}) }}
            {{ form_widget(form.message, {'attr': {'class': 'w-full border rounded px-3 py-2 h-32'}}) }}
            {{ form_errors(form.message) }}
        </div>

        <div class="text-center dark:text-[#f3f3f3] mb-4 text-sm text-gray-600 italic">
            En soumettant ce formulaire, vous acceptez que votre avis soit publié après validation par notre équipe.
        </div>

        <div class="text-center">
            <button type="submit" class="bg-rose-400 hover:bg-rose-400 text-white font-bold py-2 px-6 rounded transition duration-300">
                Envoyer
            </button>
        </div>
   {{ form_end(form, {'render_rest': false}) }}
   
</section>

{% endblock %}

