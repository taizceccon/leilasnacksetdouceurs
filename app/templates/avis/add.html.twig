{% extends 'base.html.twig' %}

{% block title %}Donnez votre avis - Douceurs & Snacks de Leila{% endblock %}

{% block meta %}
  <meta name="description" content="{{ 'laisser ton avis' }}">
{% endblock %}

{% block body %}

<section class="banner-contact bg-rose-150 py-12 text-center rounded-md mb-10 shadow">
    <h1 class="text-4xl mb-2" style="font-family: 'Buffalo', cursive;">Donnez votre avis</h1>
    <p class="text-rose-800 text-lg">Votre avis compte pour nous – partagez vos impressions sucrées et salées !</p>
</section>

<section class="max-w-xl mx-auto bg-white dark:bg-[#1b1b1b] dark:text-[#f3f3f3] shadow-lg rounded-lg p-8">
 
   {% for message in app.flashes('success') %}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      {{ message }}
    </div>
   {% endfor %}


    {{ form_start(form) }}
    
    {{ form_row(form.nom) }}

    {{ form_row(form.email) }}

    {{ form_row(form.message) }}

    {{ form_end(form) }}
      
   
</section>

{% endblock %}