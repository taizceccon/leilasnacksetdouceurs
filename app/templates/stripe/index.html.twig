{% extends 'base.html.twig' %}

{% block title %}Paiement Test - Stripe{% endblock %}

{% block meta %}
  <meta name="description" content="Testez notre intégration Stripe avec un produit factice.">
{% endblock %}

{% block body %}
<section class="container mx-auto py-10">
    <h1 class="text-3xl font-bold text-center text-rose-800 mb-8">Paiement avec Stripe</h1>

    <div class="max-w-md mx-auto bg-white rounded shadow p-6 text-center">
        <h2 class="text-xl font-semibold mb-2">Produit 1234</h2>
        <p class="mb-4">Un guide complet pour maîtriser Symfony 7.</p>
        <p class="text-green-600 text-lg font-bold mb-4">15,00 €</p>

        <form action="{{ path('stripe_checkout') }}" method="POST">
            <button type="submit" class="bg-rose-500 hover:bg-rose-600 text-white font-semibold px-6 py-2 rounded transition">
                Payer avec Stripe
            </button>
        </form>
    </div>
</section>
{% endblock %}