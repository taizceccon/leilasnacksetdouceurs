{% extends 'base.html.twig' %}

{% block title %}Inscription - Leila Snacks{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="bg-red-100 text-red-700 px-4 py-2 rounded text-sm mb-4 max-w-md mx-auto">
            {{ flash_error }}
        </div>
    {% endfor %}

    <div class="flex items-center justify-center bg-crème min-h-[50vh] dark:bg-[#333] py-6 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-xl border border-jaunePale space-y-6">

            <!-- Logo -->
            <div class="flex justify-center">
                <img src="/images/logo.webp" alt="Logo Leila" class="h-24 w-auto">
            </div>

            <div class="text-center">
                <h2 class="text-2xl font-bold text-roseFonce">Créer un compte </h2>
                <p class="mt-1 text-sm text-vertSauge">Rejoignez-nous pour savourer toutes nos douceurs !</p>
            </div>

            {{ form_start(registrationForm) }}
                {{ form_errors(registrationForm) }}

                <div class="space-y-4">
                    <div>
                        {{ form_label(registrationForm.email, 'Adresse e-mail', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm text-gray-700 focus:outline-none focus:ring-bleuMenthe focus:border-bleuMenthe' }}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div>
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {
                            'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm text-gray-700 focus:outline-none focus:ring-bleuMenthe focus:border-bleuMenthe'
                        }}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div>
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-vertSauge hover:bg-bleuMenthe focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-roseFonce transition">
                        S'inscrire
                    </button>
                </div>
            {{ form_end(registrationForm) }}

            <p class="mt-4 text-center text-sm text-gray-600">
                Vous avez déjà un compte ?
                <a href="{{ path('app_login') }}" class="text-roseFonce hover:text-bleuMenthe font-medium">Se connecter</a>
            </p>
        </div>
    </div>
{% endblock %}