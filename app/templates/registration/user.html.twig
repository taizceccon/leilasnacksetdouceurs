{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-6 bg-white dark:bg-[#2c2c2c] rounded-xl shadow mt-10">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-6">Mon compte</h1>

    <!-- Affichage des erreurs de formulaire si existantes -->
    {% for flash_message in app.flashes('error') %}
        <div class="bg-red-600 text-white p-4 rounded-lg mb-4">
            <strong>Erreur !</strong> {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.flashes('success') %}
        <div class="bg-green-600 text-white p-4 rounded-lg mb-4">
            <strong>Succès !</strong> {{ flash_message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
        <div class="grid grid-cols-1 gap-4">
            <!-- Champs de formulaire avec gestion des classes Dark Mode -->
            {{ form_row(form.nom, { 'attr': {'class': 'p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500 dark:bg-[#3a3a3a] dark:text-white dark:border-gray-700'} }) }}
            {{ form_row(form.adresse, { 'attr': {'class': 'p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500 dark:bg-[#3a3a3a] dark:text-white dark:border-gray-700'} }) }}
            {{ form_row(form.telephone, { 'attr': {'class': 'p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500 dark:bg-[#3a3a3a] dark:text-white dark:border-gray-700'} }) }}
            {{ form_row(form.plainPassword, { 'attr': {'class': 'p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500 dark:bg-[#3a3a3a] dark:text-white dark:border-gray-700'} }) }}
            {{ form_row(form.email, { 'attr': {'class': 'p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500 dark:bg-[#3a3a3a] dark:text-white dark:border-gray-700'} }) }}
            {{ form_row(form.agreeTerms, { 'attr': {'class': 'p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-rose-500 dark:bg-[#3a3a3a] dark:text-white dark:border-gray-700'} }) }}
        </div>
        <div class="mt-6 flex justify-between items-center">
            <button class="bg-rose-600 hover:bg-rose-700 text-white px-4 py-2 rounded-lg" type="submit">
                Enregistrer
            </button>
            <a href="{{ path('app_logout') }}" class="text-sm text-red-500 hover:underline flex items-center">
                <i class="fas fa-sign-out-alt mr-2"></i> Se déconnecter
            </a>
        </div>
    {{ form_end(form) }}

    <hr class="my-8 border-gray-300 dark:border-gray-600">

    <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-white">Mes commandes</h2>

    {% for order in orders %}
        <div class="border p-4 rounded-lg mb-4 bg-gray-50 dark:bg-[#1f1f1f]">
            <p class="text-sm text-gray-700 dark:text-gray-300">Commande #{{ order.id }} — {{ order.createdAt|date('d/m/Y') }}</p>
            <p class="font-semibold text-gray-800 dark:text-white">Total : {{ order.totalInEuros|number_format(2, ',', ' ') }} €</p>
            <p class="text-sm text-gray-500 dark:text-gray-300">Statut: 
                <span class="font-bold text-{{ order.status == 'En cours' ? 'yellow-500' : 'green-500' }}">
                    {{ order.status }}
                </span>
            </p>
            <a href="{{ path('order_show', {id: order.id}) }}" class="text-sm text-blue-600 dark:text-roseFonce hover:underline">
                Voir la commande
            </a>
        </div>
    {% else %}
        <p class="text-gray-600 dark:text-gray-400">Aucune commande passée pour le moment.</p>
    {% endfor %}
</div>
{% endblock %}